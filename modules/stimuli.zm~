// Symbolic definition of item type.
enum ItemType
{
    BER, DIM, SUM, FAR, DAR, SUR, FIM, BEM
}


// Item record used for the test phase item table.
record TestItem
{
    int         number;         // item number
    ItemType    type;           // item type
    string      sndfn;          // sound stimulus filename-stub
}


